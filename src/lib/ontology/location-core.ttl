@prefix arx: <http://www.arx-machina.com/> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .

arx:Location rdfs:subClassOf arx:Idea; rdfs:label "Location"@en .

# Location Types
arx:LocationType a rdfs:Class .
arx:Mountain a arx:LocationType; rdfs:label "Mountain"@en .
arx:Desert a arx:LocationType; rdfs:label "Desert"@en .
arx:Region a arx:LocationType; rdfs:label "Region"@en .
arx:City a arx:LocationType; rdfs:label "City"@en .
arx:Town a arx:LocationType; rdfs:label "Town"@en .
arx:Building a arx:LocationType; rdfs:label "Building"@en .
arx:Dungeon a arx:LocationType; rdfs:label "Dungeon"@en .
arx:Continent a arx:LocationType; rdfs:label "Continent"@en .

# Location Properties
arx:locationType a rdf:Property;
    rdfs:label  "Location Type"@en ;
    rdfs:domain arx:Location ;
    rdfs:range arx:LocationType .

arx:withinLocation a rdf:Property;
    rdfs:label "Located Within"@en ;
    rdfs:domain arx:Location ;
    rdfs:range arx:Location .

arx:adjacentTo a rdf:Property;
    rdfs:label "Adjacent to"@en ;
    rdfs:domain arx:Location ;
    rdfs:range arx:Location .